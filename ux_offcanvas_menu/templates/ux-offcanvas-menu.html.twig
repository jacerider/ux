{#
/**
 * @file
 * Theme override to display a menu.
 */
#}
{% import _self as menus %}

<nav{{ attributes.addClass('menu') }}>
  {{ menus.menu_links(items, attributes, 0) }}
</nav>

{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    <ul data-level="{{ menu_level }}">
    {% for item in items %}
      {%
        set classes = [
          item.is_collapsed ? 'collapsed',
          item.in_active_trail ? 'active-trail',
          item.below or item.has_children ? 'children'
        ]
      %}
      <li{{ item.attributes.addClass(classes) }}>
        {% if item.prefix %}
          {{ item.prefix }}
        {% endif %}
        {% if item.url.toString()|length %}
          {{ link(item.title, item.url) }}
        {% else %}
          <a {{ item.link_attributes.addClass('nolink') }}>{{ item.title|raw }}</a>
        {% endif %}
        {% if item.suffix %}
          {{ item.suffix }}
        {% endif %}
        {% if item.below %}
          {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
        {% endif %}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
